{
    "manifest_version": 3,
    "name": "My First Chrome Extension",
    "description": "A simple Chrome extension built with JavaScript",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  